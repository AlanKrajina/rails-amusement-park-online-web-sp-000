
<% if current_user.admin %>

<h1>Attractions</h1>

  <%= render partial: 'admin', locals: {attractions: @attractions} %>

<% else %>


<h1>Listing attractions</h1>


<tr>
  <td><strong>Name</strong></td>
  <td><strong>Tickets</strong></td>
  <td><strong>Details</strong></td>
</tr></br>
<tr>
    <% @attractions.each do |att| %>
      <td><%= att.name %></td></br>
    <% end %>

      <% @attractions.each do |att| %>
        <td><%= att.tickets %></td></br>
      <% end %>

        <% @attractions.each do |att| %>
          <td><%= link_to "Go to #{att.name}", attraction_path(att) %></td></br>
        <% end %>
      </tr>

<% end %>
