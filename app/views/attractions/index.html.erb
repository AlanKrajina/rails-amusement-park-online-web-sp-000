
<% if current_user.admin %>

<h1>Attractions</h1>

  <%= render partial: 'admin', locals: {attractions: @attractions} %>

<% else %>


<h1>Listing attractions</h1>


  <ul>
    <% @attractions.each do |att| %>
      <li>Name<%= att.name %></li>
      <li>Tickets<%= att.tickets %></li>
      <li><%= link_to "Go to #{att.name}", attraction_path(att) %></li>
    <% end %>
  </ul>

<% end %>
