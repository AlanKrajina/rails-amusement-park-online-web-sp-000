
<% if current_user.admin %>

<h1>Attractions</h1>

  <%= render partial: 'admin', locals: {attractions: @attractions} %>

<% else %>


<h1>Listing attractions</h1>


<tr>
    <% @attractions.each do |att| %>
      <td>Name</td>
      <td><%= att.name %></td>
      <td>Tickets<%= att.tickets %></td>
      <td><%= link_to "Go to #{att.name}", attraction_path(att) %></td>
    <% end %>
  </tr>

<% end %>
